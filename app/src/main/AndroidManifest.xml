<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.feiyuyu.game">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Game">

        <activity
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:name=".mainActivity"
            android:label="主界面">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:name=".settingActivity"
            android:label="设置">
        </activity>

        <activity
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:name=".gameSelectActivity"
            android:label="选择关卡">
        </activity>

        <activity
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:name=".checkpoint.learnConst"
            android:label="@string/app_name">
        </activity>

        <activity
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:name=".checkpoint.learnVar"
            android:label="@string/app_name">
        </activity>

        <activity
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:name=".checkpoint.chooseConst"
            android:label="选择常量">
        </activity>

        <activity
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:name=".checkpoint.chooseVar"
            android:label="选择变量">
        </activity>

        <activity
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:name=".checkpoint.learnArray"
            android:label="学习数组">
        </activity>

        <activity
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:name=".checkpoint.learnArrayPro"
            android:label="学习数组进阶">
        </activity>
   </application>

</manifest>