<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/img1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:textSize="24dp"
            android:fontFamily="@font/font18">
        </TextView>
        <TextView
            android:id="@+id/scoreTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/font18">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.bin.david.form.core.SmartTable
            android:id="@+id/table"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            tools:ignore="MissingConstraints">
        </com.bin.david.form.core.SmartTable>

       <TableLayout
           android:layout_width="100dp"
           android:layout_height="wrap_content"
           android:layout_marginLeft="50dp"
           android:layout_gravity="bottom"
           android:layout_marginBottom="40dp"
           android:divider="@color/black">

           <TableRow
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="#ff9">
               <net.feiyuyu.game.ui.tableLayout
                   android:id="@+id/choice1"
                   android:layout_width="100dp"
                   android:layout_height="45dp">
               </net.feiyuyu.game.ui.tableLayout>
           </TableRow>

           <TableRow
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="#ffffcc99">
               <net.feiyuyu.game.ui.tableLayout
                   android:id="@+id/choice2"
                   android:layout_width="100dp"
                   android:layout_height="45dp">
               </net.feiyuyu.game.ui.tableLayout>
           </TableRow>

           <TableRow
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="#ff9">
               <net.feiyuyu.game.ui.tableLayout
                   android:id="@+id/choice3"
                   android:layout_width="100dp"
                   android:layout_height="45dp">
               </net.feiyuyu.game.ui.tableLayout>
           </TableRow>
           <TableRow
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="#ffffcc99">
               <net.feiyuyu.game.ui.tableLayout
                   android:id="@+id/choice4"
                   android:layout_width="100dp"
                   android:layout_height="45dp">
               </net.feiyuyu.game.ui.tableLayout>
           </TableRow>
           <TableRow
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="#ff9">
               <net.feiyuyu.game.ui.tableLayout
                   android:id="@+id/choice5"
                   android:layout_width="100dp"
                   android:layout_height="45dp">
               </net.feiyuyu.game.ui.tableLayout>
           </TableRow>
           <TableRow
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="#ffffcc99">
               <net.feiyuyu.game.ui.tableLayout
                   android:id="@+id/choice6"
                   android:layout_width="100dp"
                   android:layout_height="45dp">
               </net.feiyuyu.game.ui.tableLayout>
           </TableRow>
        </TableLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_centerInParent="true"
            android:background="@color/purple_200"
            android:elevation="50dp"
            app:cardBackgroundColor="#00BCD4"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            android:visibility="gone"
            >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
            <net.feiyuyu.game.ui.myImageButton
                android:id="@+id/watermelonBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="#00BF1919"
                android:layout_gravity="center"
                android:src="@drawable/watermelon_48"
                >
            </net.feiyuyu.game.ui.myImageButton>
              <net.feiyuyu.game.ui.myImageButton
                  android:id="@+id/appleBtn"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="#00BF1919"
                  android:layout_gravity="center"
                  android:src="@drawable/apple_48">
              </net.feiyuyu.game.ui.myImageButton>
              <net.feiyuyu.game.ui.myImageButton
                  android:id="@+id/peachBtn"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="#00BF1919"
                  android:layout_gravity="center"
                  android:src="@drawable/peach_48">
              </net.feiyuyu.game.ui.myImageButton>
              <net.feiyuyu.game.ui.myImageButton
                  android:id="@+id/bananaBtn"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="#00BF1919"
                  android:layout_gravity="center"
                  android:src="@drawable/banana_48">
              </net.feiyuyu.game.ui.myImageButton>
              <net.feiyuyu.game.ui.myImageButton
                  android:id="@+id/grapeBtn"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="#00BF1919"
                  android:layout_gravity="center"
                  android:src="@drawable/grape_48">
              </net.feiyuyu.game.ui.myImageButton>
              <net.feiyuyu.game.ui.myImageButton
                  android:id="@+id/lemonBtn"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="#00BF1919"
                  android:layout_gravity="center"
                  android:src="@drawable/lemon_48">
              </net.feiyuyu.game.ui.myImageButton>
          </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>