<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mountain">

    <ImageButton
        android:id="@+id/varBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter">
    </ImageButton>
    <ImageButton
        android:id="@+id/varBtn1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter">
    </ImageButton>

    <ImageButton
        android:id="@+id/constBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/apple"
        android:scaleType="fitCenter">
    </ImageButton>
    <ImageButton
        android:id="@+id/constBtn1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/watermelon"
        android:scaleType="fitCenter">
    </ImageButton>


    <TextView
        android:id="@+id/scoreShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font18"
        android:text="Score:"
        android:textSize="24sp"></TextView>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/font18"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/scoreShow"
        tools:layout_editor_absoluteY="0dp">
    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/tipCard"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@color/purple_200"
        app:cardBackgroundColor="#00BCD4"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/gameState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:fontFamily="@font/font18"
            android:text="游戏成功！"
            android:textSize="30sp"></TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom|center_horizontal">

            <Button
                android:id="@+id/retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:fontFamily="@font/font18"
                android:text="重来"
                android:textSize="18sp">

            </Button>
            <Button
               android:id="@+id/nextCp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="bottom|center_horizontal"
               android:fontFamily="@font/font18" android:textSize="18sp"
               android:text="下一关">
            </Button>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>