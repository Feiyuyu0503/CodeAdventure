<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/img1"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/scoreShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF5722"
            android:text="Score   "
            android:textSize="24dp"
            android:fontFamily="@font/font18">
        </TextView>
        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF5722"
            android:text="0"
            app:layout_constraintStart_toEndOf="@+id/scoreShow"
            android:textSize="24dp"
            android:fontFamily="@font/font18">
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/cpName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startButton"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/font18"
        android:rotationX="25"
        android:text="认识数组"
        android:textSize="68sp"
        tools:ignore="MissingConstraints"></TextView>
    <Button
        android:id="@+id/startButton"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="@drawable/button">
    </Button>

    <Button
        android:id="@+id/createBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/startButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-55dp"
        android:text="任务要求"></Button>
    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:visibility="gone"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@color/purple_200"
        app:cardBackgroundColor="#00BCD4"
        app:cardCornerRadius="35dp"
        app:cardElevation="50dp">

        <TextView
            android:id="@+id/taskTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="    数组是一组放置相同数据类型元素的连续内存空间，假定不同方向为不同数据类型，请开辟大小合适的数组帮助小鸟吃到苹果吧！"
            android:textSize="24dp"
            android:fontFamily="@font/font18">
        </TextView>

        <Button
            android:id="@+id/okBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认"
            android:textSize="24sp"
            android:fontFamily="@font/font18"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="25dp">
        </Button>
    </android.support.v7.widget.CardView>

</RelativeLayout>